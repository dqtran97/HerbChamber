void setup() {
  pinMode(LED_BUILTIN, OUTPUT);
  
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(8, OUTPUT);

  digitalWrite(2, LOW);
  digitalWrite(3, LOW);
  digitalWrite(4, LOW);
  digitalWrite(5, LOW);
  digitalWrite(6, LOW);
  digitalWrite(7, LOW);
  digitalWrite(8, LOW);
  Serial.begin(9600);
  
 allRelaysTest();
}

void loop() {


  
}

void allRelaysTest(){

  
  digitalWrite(2, LOW);
  digitalWrite(3, LOW);
  digitalWrite(4, LOW);
  digitalWrite(5, LOW);
  digitalWrite(6, LOW);
  digitalWrite(7, LOW);
  digitalWrite(8, LOW);
  
  digitalWrite(LED_BUILTIN, HIGH);
  digitalWrite(2, HIGH);
  delay(1000);

  digitalWrite(LED_BUILTIN, LOW);
  digitalWrite(2, LOW);
  delay(1000);

  
  digitalWrite(LED_BUILTIN, HIGH);
  digitalWrite(3, HIGH);
  delay(1000);

  digitalWrite(LED_BUILTIN, LOW);
  digitalWrite(3, LOW);
  delay(1000);

  

  digitalWrite(LED_BUILTIN, HIGH);
  digitalWrite(4, HIGH);
  delay(1000);

  digitalWrite(LED_BUILTIN, LOW);
  digitalWrite(4, LOW);
  delay(1000);


  digitalWrite(LED_BUILTIN, HIGH);
  digitalWrite(5, HIGH);
  delay(1000);

  digitalWrite(LED_BUILTIN, LOW);
  digitalWrite(5, LOW);
  delay(1000);


  digitalWrite(LED_BUILTIN, HIGH);
  digitalWrite(6, HIGH);
  delay(1000);

  digitalWrite(LED_BUILTIN, LOW);
  digitalWrite(6, LOW);
  delay(1000);


  digitalWrite(LED_BUILTIN, HIGH);
  digitalWrite(7, HIGH);
  delay(1000);

  digitalWrite(LED_BUILTIN, LOW);
  digitalWrite(7, LOW);
  delay(1000);


  digitalWrite(LED_BUILTIN, HIGH);
  digitalWrite(8, HIGH);
  delay(1000);

  digitalWrite(LED_BUILTIN, LOW);
  digitalWrite(8, LOW);
  delay(1000);


}
