#include <DHT.h>
#define DHTPIN 4  // Connect Data pin of DHT to D4
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);


#include <SoftwareSerial.h>
#include <ArduinoJson.h>
SoftwareSerial s(2, 3);
int soil1 = A0;
int soil2 = A1;
int soil3 = A3;
int soil4 = A4;

void setup() {
  dht.begin();
  Serial.begin(9600);
  s.begin(115200);
}

void loop() {
  int soilmoisturepercent1 = (map(analogRead(soil1), 700, 200, 0, 100))-35; 
  int soilmoisturepercent2 = map(analogRead(soil2), 700, 200, 0, 100)-15; 
  int soilmoisturepercent3 = map(analogRead(soil3), 700, 200, 0, 100)-39; 
  int soilmoisturepercent4 = map(analogRead(soil4), 700, 200, 0, 100)-55; 

  String humid =(String)dht.readHumidity();
  String temp = (String)dht.readTemperature(true);
  String moisture1 =(String)soilmoisturepercent1;
  String moisture2 = (String)soilmoisturepercent2;
  String moisture3 =(String)soilmoisturepercent3;
  String moisture4 = (String)soilmoisturepercent4;
  String out = "| "+humid+" | " +temp+" | "+moisture1+" | "+moisture2+" | "+moisture3+" | "+moisture4+" | ";
  
  s.print(out);
  Serial.println(out);

  delay(15000);
}
