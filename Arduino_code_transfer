#include <DHT.h>
#define DHTPIN 4  // Connect Data pin of DHT to D4
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);


#include <SoftwareSerial.h>
#include <ArduinoJson.h>
SoftwareSerial s(5, 6);
int soil = A0;
void setup() {
  dht.begin();
  Serial.begin(9600);
  s.begin(115200);
}


void printSensor() {
  float h = dht.readHumidity();
  float f = dht.readTemperature();
  float t = dht.readTemperature(true);
  if (isnan(h) || isnan(t) || isnan(f)) {
  Serial.println(F("Failed to read from DHT sensor!"));
  return;
  }

  Serial.print(F("\nHumidity: (%)"));
  Serial.print(h);
  Serial.print(F("\nTemperature (F): "));
  Serial.print(t);

  delay(2000);
}
void loop() {
  int soilmoisturepercent = map(analogRead(soil), 550, 280, 0, 100); //500 is dry, 280 is water wet
  String Char0 = "H: ";
  String Char1 = "T(F) = ";
  String Char2 = "Soil = ";
  String humid = Char0 + (String)dht.readHumidity();
  String temp = Char1 + (String)dht.readTemperature(true);
  String moisture = Char2+ (String)soilmoisturepercent;
  String out = humid + "(%), " + temp + "(F), " + moisture+ "(% wet)";
  
  s.print(out);
  Serial.println(out);
  delay(15000);
}
