#include <SoftwareSerial.h>
#include <ArduinoJson.h>
#include "FirebaseESP8266.h"  // Install Firebase ESP8266 library
#include <ESP8266WiFi.h>
#include <SPI.h>
#include <Wire.h>

#define FIREBASE_HOST "sdp21-4b787.firebaseio.com/" //Without http:// or https:// schemes
#define FIREBASE_AUTH "Vw8ZlF4gKtPxfs4i0K7EWKMSVJpP6yvZFVWCwR2l"  
#define WIFI_SSID "fried rice"
#define WIFI_PASSWORD "4133337117"

FirebaseData firebaseData; //Define FirebaseESP8266 data object
FirebaseJson json;


SoftwareSerial s(D6,D5);
void setup() {
  
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
  Serial.print("Connecting to Wi-Fi");
  while (WiFi.status() != WL_CONNECTED)
  {
    Serial.print(".");
    delay(300);
  }
  Serial.println();
  Serial.print("Connected with IP: ");
  Serial.println(WiFi.localIP());
  Serial.println();
  Firebase.begin(FIREBASE_HOST, FIREBASE_AUTH);
  Firebase.reconnectWiFi(true);

  Serial.begin(9600);
  s.begin(115200);
  while (!Serial) continue;
  //testing the connection
 }
                              
  


void loop() { 
String data;
boolean dataReady = false;
if(s.available()) {
  data = s.readString();
  }
Serial.println(data);
Firebase.setString(firebaseData,"/arduino", data);
delay(15000);
}

