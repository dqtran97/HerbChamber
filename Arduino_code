// constants won't change
const int fan = 2;  // the Arduino pin, which connects to the IN pin of relay
const int s1 = 3;  // the Arduino pin, which connects to the IN pin of relay
const int s2 = 4;  // the Arduino pin, which connects to the IN pin of relay
const int s3 = 5;  // the Arduino pin, which connects to the IN pin of relay
const int s4 = 6;  // the Arduino pin, which connects to the IN pin of relay
const int s5 = 7;  // the Arduino pin, which connects to the IN pin of relay
const int pump = 8;  // the Arduino pin, which connects to the IN pin of relay

// the setup function runs once when you press reset or power the board
void setup() {
  // initialize digital pin 9 as an output.
  pinMode(fan, OUTPUT);
  pinMode(s1, OUTPUT);
  pinMode(s2, OUTPUT);
  pinMode(s3, OUTPUT);
  pinMode(s4, OUTPUT);
  pinMode(s5, OUTPUT);
  pinMode(pump, OUTPUT);
}

// the loop function runs over and over again forever
void loop() {
  digitalWrite(fan, HIGH);
  digitalWrite(s1, HIGH);
  digitalWrite(s2, HIGH);
  digitalWrite(s3, HIGH);
  digitalWrite(s4, HIGH);
  digitalWrite(s5, HIGH);
  digitalWrite(pump, HIGH);
  delay(500);
  digitalWrite(fan, LOW);
  digitalWrite(s1, LOW);
  digitalWrite(s2, LOW);
  digitalWrite(s3, LOW);
  digitalWrite(s4, LOW);
  digitalWrite(s5, LOW);
  digitalWrite(pump, LOW);
  delay(500); 
  

}
